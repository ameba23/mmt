  <fieldset>
    <%= f.label :coin, class: 'inline-block' %>
    <%= f.collection_select(:coin_id, Coin.all, :id, :code, class: 'inline-block') %>
    <%# %%TODO%% work out correct delimitation to 2 decimal places %>
